/*
Question:
Given an unsorted array of integers, find the length of the
longest sequence of consecutive numbers.
*/

#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    vector<int> nums(n);
    for (int i = 0; i < n; i++) cin >> nums[i];

    unordered_set<int> st(nums.begin(), nums.end());
    int longest = 0;

    for (int num : nums) {
        if (!st.count(num - 1)) {   // starting point
            int current = num;
            int length = 1;

            while (st.count(current + 1)) {
                current++;
                length++;
            }

            longest = max(longest, length);
        }
    }

    cout << longest << endl;
}
